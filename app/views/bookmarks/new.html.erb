<div class="container">
  <h1>Add a bookmark to the list '<%= @list.name %>'</h1>
  <%= simple_form_for [@list, @bookmark] do |f| %>
  <%= f.input :comment %>
  <%= f.association :movie %>
  <%= f.button :submit, class: 'btn btn-primary' %>
  <%= link_to 'Back', list_path(@list), class: 'btn btn-success' %>
  <% end %>
</div>

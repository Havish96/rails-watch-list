<div class="banner">
  <div class="container text-center">
    <h1>Create your list</h1>
    <h3 class='mt-3'>Add all kind of movies to your list</h3>
  </div>
</div>
<div class='container px-5 mt-3 d-flex justify-content-between'>
  <h2>My lists</h2>
  <p><%= link_to 'Create a movie list', new_list_path, class: 'btn btn-success text-light' %></p>
</div>
<div class='container mt-3 cards'>
  <% @lists.each do |list| %>
  <%= link_to list_path(list) do %>
    <div class='card'>
      <%= list.name %>
    </div>
    <% end %>
  <% end %>
</div>

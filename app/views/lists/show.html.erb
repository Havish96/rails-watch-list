<div class="container">
  <p class='mt-3'><%= link_to 'Back to lists', lists_path, class: 'btn btn-success' %></p>
  <h1><%= @list.name %></h1>
  <ul>
    <% @bookmarks.each do |bookmark| %>
  <li>
    <p><%= bookmark.movie.title %></p>
    <%= image_tag bookmark.movie.poster_url, alt: "movie-poster", width: 200 %>
    <p class='mt-3'><%= bookmark.movie.overview %></p>
    <p>Rating: <%= bookmark.movie.rating %></p>
    <p>Comments: <%= bookmark.comment %></p>
    <%= link_to "Delete", bookmark_path(bookmark), class: 'btn btn-danger mb-3', data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
  </li>
    <% end %>
  </ul>
  <h3><%= link_to 'Add a bookmark', new_list_bookmark_path(@list), class: 'btn btn-primary' %></h3>
</div>
